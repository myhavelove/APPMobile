{
    "pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
        {
            "path": "pages/home/index",
            "style": {
                "navigationStyle": "custom",
                "enablePullDownRefresh": true,
                "app-plus": {
                    "bounce": "none", //关闭窗口回弹效果 
                    "titleNView": {
                        "buttons": [ //原生标题栏按钮配置,
                            {
                                "color": "#303133",
                                "background": "rgba(0,0,0,0)",
                                "redDot": true

                            }
                        ]

                    }
                }
            }
        }, {
            "path": "pages/home/newsList",
            "style": {
                "navigationBarTitleText": "消息通知",
                "navigationBarBackgroundColor": "#2ea8ab",
                "navigationBarTextStyle": "white",
                "backgroundColor": "#F3F3F3"
            }
        }, {
            "path": "pages/index/index",
            "style": {
                "navigationBarTitleText": "工作中心",
                "navigationBarBackgroundColor": "#2ea8ab",
                "navigationBarTextStyle": "white",
                "backgroundColor": "#F3F3F3"
            }
        }, {
            "path": "pages/personal/index",
            "style": {
                "navigationBarTitleText": "我的",
                "navigationBarBackgroundColor": "#2ea8ab",
                "navigationBarTextStyle": "white",
                "backgroundColor": "#F3F3F3"
            }
        }
    ],
    "globalStyle": {
        "navigationBarTextStyle": "black",
        "navigationBarTitleText": "uni-app",
        "navigationBarBackgroundColor": "#F8F8F8",
        "backgroundColor": "#F8F8F8"
    },
    "tabBar": {
        "color": "#666666",
        "selectedColor": "#1fc4d7",
        "backgroundColor": "#FFFFFF",
        "list": [{
                "pagePath": "pages/home/index",
                "text": "首页",
                "iconPath": "static/images/home.png",
                "selectedIconPath": "static/images/home_hover.png"
            },
            {
                "pagePath": "pages/index/index",
                "text": "工作中心",
                "iconPath": "static/images/case.png",
                "selectedIconPath": "static/images/case_hover.png"
            },
            {
                "pagePath": "pages/personal/index",
                "text": "我的",
                "iconPath": "static/images/user.png",
                "selectedIconPath": "static/images/user_hover.png"
            }
        ]
    }
